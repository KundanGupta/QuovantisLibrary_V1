<%- include('partials/header') %>
<body class="full-height-width">
    <div class="full-height-width table-container">
        <div class="full-height-width row-container">
            <div class="full-height-width cell-container">

                <div class="form-container">
                    <!--<h2>Login</h2>-->
                    <% if(locals.error) { %>
                        <div class="alert alert-danger"><%= error %></div>
                    <% } %>
                    <% if(locals.success) { %>
                        <div class="alert alert-success"><%= success %></div>
                    <% } %>
                    <form method="post">
                        <div class="arrow-left"></div>
                        <div class="login-container">
                            <div class="form-group login-control">
                                <!--<label for="username">Username</label>-->
                                <input type="text" placeholder="Enter your name" name="username" id="username" 
                                    value="<%= locals.username || '' %>" class="form-control login-text" />
                                <span class="fa fa-user form-control-feedback"></span>
                            </div>
                            <div class="form-group login-control">
                                <!--<label for="password">Password</label>-->
                                <input type="password" name="password" id="password" placeholder="Password" class="form-control login-text" />
                                <span class="fa fa-lock form-control-feedback"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary login">Login</button>
                                <a href="/register" class="btn btn-link nav-text">Register</a>
                                <a href="/login" class="btn btn-link nav-text">Forgot Password</a>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    
</body>
<%- include('partials/footer') %>